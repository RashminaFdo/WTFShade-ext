{
  "manifest_version": 3,
  "name": "WTFShade",
  "version": "1.0",
  "description": "A color picker with multiple format support and history",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": ["clipboardWrite", "storage"]
} 